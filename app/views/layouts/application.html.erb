<!DOCTYPE html>
<html lang="it">
  <%= render DmUniboCommon::HeaderComponent.new %>
  <body>
    <%= render partial: 'layouts/menu' %>

    <main role="main" class="container">
      <%= render DmUniboCommon::PrivacyAlertComponent.new(cookies) %>  
      <%= bootstrap_flash %>
      <%= turbo_frame_tag "modal" %>

      <% if current_organization %>  
        <h2 class="centered">
          <%= current_organization.code %> - <%= current_organization.name %>
        </h2>
      <% end %>

      <%= yield %>
    </main>

    <%= render DmUniboCommon::FooterComponent.new(current_user, contacts_path: contacts_path, documentation_path: "https://www.dm.unibo.it/almarusco/help/docs/intro/") %>  
    <%= render DmUniboCommon::ImpersonationComponent.new(current_user, true_user) %>  
  </body>
</html>
