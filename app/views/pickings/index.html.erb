<h1>Ritiri</h1>

<div class="centered my-4">
  <%= link_to 'Nuovo Ritiro', new_picking_path, class: 'btn btn-primary' %>  
</div>

<% if @pickings.empty? %>  
  <p class="info info-warning">
  Non sono al momento programmati ritiri per al tua UL.
  </p>
<% else %>
  <div class="list-group">
    <% @pickings.each do |picking| %>  
      <%= link_to picking, class: "list-group-item list-group-item-action #{picking.delivered_at ? 'list-group-item-secondary' : ''}" do %>  
        <div class="my-2">
          <span class="pe-3"><%= picking.date ? l(picking.date) : '' %></span>   
          <strong><%= picking.supplier.to_s.upcase %></strong>
          <span class="float-end"><%= picking.status %></span>
        </div>
        <div class="ps-4">
          <% picking.picking_documents.each do |pd| %>  
            <span class="badge bg-light text-dark"><%= pd %> </span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
