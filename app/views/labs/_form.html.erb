<%= dm_form_for @lab do |f| %>  
  <%= f.input :name %>  
  <% if @buildings.size > 1 %>  
    <%= f.association :building, collection: @buildings, label_method: lambda {|b| b.to_s_complete}, include_blank: false %>  
  <% else %>
    <% @lab.building_id = @buildings.first.id %>  
    <%= f.input :building_id, as: :hidden %>
  <% end %>
  <%= f.submit %> - <%= link_to_back labs_path %>    
<% end %>

