<h1>MUD <%= @year %></h1>

<table class="table table-bordered text-end">
  <thead>
    <tr class="table-primary">
      <th>Cer</th>
      <td>P. Netto</td>
      <td>Rimanenza</td>
      <td>Totale</td>
    </tr>
  </thead>
  <tbody>
    <% @mud.all_cers.each do |cer_code| %>  
      <tr>
        <th title="<%= cer_code.description %>">
          <%= cer_code %>
        </th>
        <td>
          <%= kg1 = @summary[cer_code][:kgs].to_i %> 
        </td>
        <td> 
          <%= kg2 = @remainders[cer_code][:kgs].to_i %> 
        </td>
        <td>
          <%= kg1.to_i + kg2.to_i %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%# render Disposal::BadgeComponent.new(current_user, disposal) %>  
