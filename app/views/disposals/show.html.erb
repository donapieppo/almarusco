<h1>Detttagli rifiuto</h1>

<%= render @disposal %>  

<div class="centered my-2">
  <% if policy(current_organization).manage? %>  
    <% if @disposal.approved? %>  
      <%= link_to 'Disconferma', unapprove_disposal_path(@disposal), method: :post, class: 'btn btn-success btn-lg' %>  
    <% else %>
      <%= link_to 'Conferma', approve_disposal_path(@disposal), method: :post, class: 'btn btn-success btn-lg' %>  
    <% end %>
  <% end %>
</div>

<div class="my-4 centered">
  <% adr_images(@disposal) %>  
</div>

<div class="my-4 centered">
  <%= qrcode(@disposal) %>  
</div>
