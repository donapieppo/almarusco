document.querySelectorAll(".choosable-disposal-type").forEach((x) => x.style.display = 'none');

const showDisposalType = (t) => {
  console.log(t);

  document.querySelectorAll(".btn").forEach((x) => x.classList.remove('btn-success'));
  document.getElementById(t).classList.add('btn-success');

  document.querySelectorAll(".choosable-disposal-type").forEach((x) => {
    if (x.classList.contains(t)) {
      x.style.display = 'block';
    } else {
      x.style.display = 'none';
    }
  });
}

