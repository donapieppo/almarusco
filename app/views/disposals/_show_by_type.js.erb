const cerSelectorForm = document.querySelector("form.disposal_cer_selector");

cerSelectorForm.addEventListener('change', (e) => {
  let selectedId = e.target.id
  document.querySelectorAll(".disposal-card").forEach(d => {
    d.style.display = (d.dataset.cerid === selectedId) ? 'block' : 'none';
  })
});

