<%= dm_card title: "Contratti" do %>
  <ul>
    <% @contracts.each do |contract| %>  
      <li class="d-flex flex-row">
        <div class="flex-grow-1">
          <strong>CER <%= contract.cer_code.name %></strong>
          prezzo al kg. <%= contract.price%>&euro;
        </div>
        <div class="text-right">
          <%= helpers.link_to_delete contract_path(contract) %>
          <%= link_to fwdmicon('edit'), [:edit, contract], data: { turbo_frame: :modal } %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<%= dm_card title: "Crea nuovo contratto" do %>
  <div class="alert alert-secondary">Scegli il codice Cer a contratto</div>
  <ul>
    <% @other_cer_codes.each do |cer_code| %>  
      <li class="py-1">
        <%= link_to cer_code, [:new, @supplier, :contract, cer_code_id: cer_code.id], class: 'btn btn-outline-secondary btn-sm', data: { turbo_frame: :modal } %>
      </li>
    <% end %>
  </ul>
<% end %>
