<%= link_to disposal_path(@disposal, modal: 1), class: "btn btn-outline-secondary mb-2 me-2", style: 'position: relative', data: { turbo_frame: 'modal' } do %>  
  <span class="badge bg-info" style="position: absolute; top: -10px; right: -5px">
    <%= @disposal.id %>
  </span>
  <span class="font-monospace pb-4">   
    <strong><%= @disposal.kgs %></strong> <small>Kg.</small>
    <strong><%= @disposal.volume %></strong> <small>L.</small>
  </span>
<% end %>
