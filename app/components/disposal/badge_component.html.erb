<%= link_to disposal_path(@disposal, modal: 1), class: "btn btn-outline-secondary mb-2 me-2", style: 'position: relative', data: { turbo_frame: 'modal' } do %>  
  <span class="badge bg-info p-1" style="position: absolute; top: -10px; right: -5px">
    <small><%= @disposal.multiple_units_to_s %></small>
    <%= @disposal.id %>
  </span>
  <span class="font-monospace">   
    <strong><%= @disposal.kgs.to_f %></strong><span style="font-size: 70%"> Kg.</span>
    <strong><%= "#{@disposal.units}x" if @disposal.units > 1 %><%= @disposal.volume %></strong><span style="font-size: 70%"> L.</span>
  </span>
<% end %>
