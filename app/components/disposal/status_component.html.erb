<%= raw @status_icon %> 

<% if @disposal.picking_id %>  
  <%= link_to @status, picking_path(@disposal.picking_id), data: { turbo: false } %> 
<% else %>
  <% if @modal %>  
    <%= @status %>  
  <% elsif @disposal.kgs %>
    <%= link_to @status, disposal_path(@disposal, modal: 1), data: { turbo_frame: :modal } %>  
  <% elsif @policy.edit? %>
    <%= link_to 'manca il peso', edit_disposal_path(@disposal), data: { turbo: false } %>  
  <% else %>
    <%= @status %>
  <% end %>
<% end %>
