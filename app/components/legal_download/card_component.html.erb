<div class="dm-card">
  <div class="dm-card-title">
    Registrazione di scarico n. <%= @legal_download %> del <%= l(@legal_download.date) %>
  </div>

  <div class="dm-card-body">
    <div class="alert alert-info fw-bold"><%= @legal_download.disposal_type %></div>

    <div class="fw-bold text-decoration-underline">
      <% if @picking.completed? %>  
        <%= link_to @picking %> (completato)  
      <% else %>
        <%= link_to @picking, [:edit, @picking] %>  
      <% end %>
    </div>

    <div class="my-2">
      Formulario: <%= @picking_document %>  
    </div>

    <div class="my-2">
      <%= render Disposal::GroupDetailsComponent.new(@picking.disposals) %>  
    </div>
  </div>

  <% if @policy.edit? %>  
    <div class="pb-2 ps-4">
      <%= link_to 'Modifica', [:edit, @legal_download], class: :button %>  
    </div>
  <% else %>
    <div class="pb-2 ps-4 text-warning">
      Documento non modificabile
    </div>
  <% end %>
</div>
